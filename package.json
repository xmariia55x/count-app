{
  "name": "count-app",
  "version": "0.0.1",
  "description": "A node project that exposes a REST API.",
  "main": "main.ts",
  "scripts": {
    "build": "rm -rf dist && tsc --project tsconfig.json",
    "start:local": "npm run build && node -r dotenv/config ./dist/main.js",
    "start": "node -r dotenv/config ./dist/main.js",
    "deploy:docker": "docker compose -f docker-compose.yaml -p count-app up -d",
    "stop:docker": "docker compose -f docker-compose.yaml -p count-app down",
    "test": "TZ=UTC jest"
  },
  "author": "Maria Galvez",
  "license": "ISC",
  "dependencies": {
    "express": "^4.19.2",
    "lodash": "^4.17.21",
    "redis": "^4.6.13"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-junit": "^16.0.0",
    "redis-mock": "^0.56.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  }
}
